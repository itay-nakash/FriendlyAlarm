<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weakbeach"
    tools:context="com.example.itay.newfrindlyalarm.AlarmPage">


    <Button
        android:id="@+id/button_alarm_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off"
    android:background="#1a6ca3"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <ImageView
        android:id="@+id/snooze1"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/number3"
        app:layout_constraintTop_toTopOf="@+id/snooze2"
        app:layout_constraintRight_toLeftOf="@+id/snooze2"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/snooze2"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/snooze5"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/snooze3" />

    <ImageView
        android:id="@+id/snooze3"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/number7"
        app:layout_constraintLeft_toRightOf="@+id/snooze2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/button_alarm_off" />

    <ImageView
        android:id="@+id/snooze4"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/snooze10"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/snooze5"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/snooze5"
        android:layout_marginTop="1dp" />

    <ImageView
        android:id="@+id/snooze5"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/number15"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/snooze6" />

    <ImageView
        android:id="@+id/snooze6"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/number20"
        app:layout_constraintLeft_toRightOf="@+id/snooze5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/snooze2" />

    <TextView
        android:id="@+id/textViewSnooze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ee4d4b4b"
        android:text="Snooze:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_alarm_off"
        app:layout_constraintLeft_toLeftOf="@+id/snooze1"
        tools:layout_editor_absoluteX="27dp" />

</android.support.constraint.ConstraintLayout>
